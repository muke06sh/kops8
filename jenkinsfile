pipeline {
    agent any
    stages {
        stage('Pull Code From GitHub') {
            steps {
                git 'https://github.com/muke06sh/kops-0809.git'
            }
        }
        stage('Build the Docker image') {
            steps {
                sh 'sudo docker build -t newimage01 /var/lib/jenkins/workspace/k8 project'
                sh 'sudo docker tag newimage01 mukesh06/newimage01:latest'
                sh 'sudo docker tag newimage01 mukesh06/newimage01:${BUILD_NUMBER}'
            }
        }
        stage('Push the Docker image') {
            steps {
                sh 'sudo docker image push mukesh06/newimage01:latest'
                sh 'sudo docker image push mukesh06/newimage01:${BUILD_NUMBER}'
            }
        }
        stage('Deploy on Kubernetes') {
            steps {
                sh 'sudo kubectl apply -f /var/lib/jenkins/workspace/kuber/pod.yaml'
                sh 'sudo kubectl rollout restart deployment loadbalancer-pod'
            }
        }
    }
}

